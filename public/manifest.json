{
  "manifest_version": 3,

  "name": "Auto Tweet Retweeter",
  "description": "Automatically retweet tweets found on tabs.",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["alarms"],

  "host_permissions": ["<all_urls>"]
}
